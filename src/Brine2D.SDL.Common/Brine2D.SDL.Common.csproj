<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net10.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<Version>0.7.0-beta</Version>

		<PackageId>Brine2D.SDL.Common</PackageId>
		<Title>Brine2D SDL Common Utilities</Title>
		<Authors>CrazyPickle Studios</Authors>
		<Description>Shared utilities and interfaces for Brine2D SDL3 implementations. This package is automatically installed as a dependency - you don't need to reference it directly.</Description>
		<PackageTags>gameengine;game;2d;brine2d;sdl3;internal;utilities</PackageTags>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageProjectUrl>https://brine2d.com</PackageProjectUrl>
		<RepositoryUrl>https://github.com/CrazyPickleStudios/Brine2D</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageReadmeFile>README.md</PackageReadmeFile>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="SDL3-CS" Version="3.5.0-preview.20260112-122507" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\..\README.md" Pack="true" PackagePath="\" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Brine2D.Core\Brine2D.Core.csproj" />
	</ItemGroup>

	<ItemGroup>
		<InternalsVisibleTo Include="Brine2D.Input.SDL" />
	</ItemGroup>

</Project>